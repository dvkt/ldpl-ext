{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LDPL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ldpl",
				"match": "(?<=^|[\\s])((?i)procedure:|data:|end if|end sub-procedure|break|continue|do|else|if|repeat|return|sub-procedure|then|while)(?=\\s|$)"
			},
			{
				"name": "entity.name.function.ldpl",
				"match": "(?<=^|[\\s])((?i)abs|accept|add|append|call sub-procedure|call external|call|ceil|display|divide|execute|exit|floor|get|join|modulo|multiply|store|subtract|wait|write)(?=\\s|$)"
			},
			{
				"name": "storage.type.ldpl",
				"match": "(?<=^|[\\s])((?i)number|text|vector)(?=\\s|$)"
			},
			{
				"name": "storage.modifier.ldpl",
				"match": "(?<=^|\\s)((?i)and|by|from|is|in|not|or)(?=\\s|$)"
			},
			{
				"name": "constant.language.boolean.ldpl",
				"match": "(?<=^|\\s)((?i)character|crlf|length of|random)(?=\\s|$)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.ldpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ldpl",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"match": "(-?\\d\\d*(\\.\\d\\d*)?)",
					"name": "constant.numeric.double.ldpl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.ldpl"
						}
					},
					"end": "$",
					"name": "comment.line.ldpl"
				}
			]
		}
	},
	"scopeName": "source.ldpl"
}
