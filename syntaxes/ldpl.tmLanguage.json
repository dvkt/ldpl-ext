{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LDPL",
	"patterns": [
		{
			"include": "#procedures"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"procedures": {
			"patterns": [{
				"name": "entity.name.function.ldpl",
				"match": "(?<=sub-procedure|SUB-PROCEDURE) (.+)"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ldpl",
				"match": "(?<=^|[\\s])((?i)procedure:|data:|call sub-procedure|store character code of|store character|get character at|store length of|and store output in|until eof|store random in|equal to|greater than|less than|and store exit code in|load file|to file|end sub-procedure|abs|accept|add|and|append|break|by|call|ceil|continue|display|divide|do|else|end|execute|exit|external|floor|from|if|in|is|join|milliseconds|modulo|multiply|not|or|repeat|return|store|sub-procedure|subtract|then|wait|while|write)(?=\\s|$)"
			},
			{
				"name": "storage.type.ldpl",
				"match": "(?<=^|[\\s])((?i)number|text|vector)(?=\\s|$)"
			},
			{
				"name": "constant.language.boolean.ldpl",
				"match": "(?<=^|\\s)(?i)crlf(?=\\s|$)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.ldpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ldpl",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"match": "(-?\\d\\d*(\\.\\d\\d*)?)",
					"name": "constant.numeric.double.ldpl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.ldpl"
						}
					},
					"end": "$",
					"name": "comment.line.ldpl"
				}
			]
		}
	},
	"scopeName": "source.ldpl"
}
